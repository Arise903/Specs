  "license": "MIT",
  "authors": {
    "uzzi": "1204556447@qq.com"
  },
  "platforms": {
    "ios": "10.0"
  },
  "source": {
    "git": "https://github.com/xq-120/JHGPopupKit.git",
    "tag": "1.8.0"
  },
  "frameworks": [
    "Foundation",
    "UIKit"
  ],
  "requires_arc": true,
  "dependencies": {
    "Masonry": [
      "~> 1.1.0"
    ]
  },
  "pod_target_xcconfig": {
